<Window x:Class="Monthly_Claim_System.ApprovalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Approve Claims - Coordinator/Manager" Height="450" Width="700"
        WindowStartupLocation="CenterScreen" Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Purple Header -->
        <Border Grid.Row="0" Background="#FF800080" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="Pending Claims for Approval" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Claims List -->
        <DataGrid x:Name="PendingClaimsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="White"
                  BorderBrush="LightGray"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="100"/>
                <DataGridTextColumn Header="Lecturer ID" Binding="{Binding LecturerId}" Width="100"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding Hours}" Width="80"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding Rate, StringFormat='R {0}'}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='R {0:F2}'}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="APPROVE CLAIM" 
                    Click="ApproveButton_Click" 
                    Background="Green" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="15,8" 
                    Margin="0,0,10,0"/>
            <Button Content="REJECT CLAIM" 
                    Click="RejectButton_Click" 
                    Background="Red" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>